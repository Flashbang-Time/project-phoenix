{
  "expo": {
    "name": "Project Phoenix",
    "slug": "project-phoenix-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/phoenix-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.projectphoenix.mobile"
    },
    "android": {
      "package": "com.projectphoenix.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/phoenix-adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WAKE_LOCK"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/phoenix-favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ]
  }
}
